{
  "manifest_version": 2,
  "name": "Miku Theme",
  "description": "A Hatsune Miku themed New Tab page for Firefox!",
  "version": "0",
  "author": "MalikHw47",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "https://raw.githubusercontent.com/*",
    "https://duckduckgo.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "miku-theme@malikhw47.com",
      "strict_min_version": "78.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
